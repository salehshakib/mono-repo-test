{
  "name": "purrfectsoft-mono-repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json, mjs}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:ci": "prettier --list-different \"**/*.{ts,tsx,md,json}\"",
    "commitlint:strict": "COMMITLINT_STRICT=2 commitlint --edit",
    "commitlint:relaxed": "COMMITLINT_STRICT=0 commitlint --edit",
    "postinstall": "husky",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
